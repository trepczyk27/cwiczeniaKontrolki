<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KawaActivity2">



<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Kawa:"
    android:textSize="30dp"
    android:layout_marginLeft="30dp"
    android:layout_marginTop="50dp"
    android:id="@+id/text1"/>

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text1"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner1"
        android:layout_marginLeft="30dp"
        android:text="Wielkość:"
        android:textSize="30dp" />



            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radio1"
                android:layout_below="@id/text2"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="30dp"
                android:text="mała"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radio2"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="30dp"
                android:layout_below="@id/text2"
                android:text="średnia"/>
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radio3"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/text2"
        android:text="duża"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dodatki:"
        android:layout_below="@+id/radio3"
        android:layout_marginLeft="30dp"
        android:textSize="30dp"
        android:layout_marginTop="50dp"
        android:id="@+id/text4"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text4"
        android:layout_marginLeft="30dp"

        android:text="cukier"
        android:id="@+id/c1"
        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/c1"
        android:layout_marginLeft="30dp"

        android:text="miód"
        android:id="@+id/c2"

        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/c2"
        android:layout_marginLeft="30dp"

        android:text="miód"
        android:id="@+id/c3"

        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/c3"
        android:layout_marginLeft="30dp"

        android:text="mleko"
        android:id="@+id/c4"

        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/c4"
        android:layout_marginLeft="30dp"

        android:text="przyprawy"
        android:id="@+id/c5"

        />
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/c5"
                android:layout_marginLeft="80dp"
                android:id="@+id/spinner2"
                />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b1"
        android:layout_below="@+id/spinner2"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="50dp"
        android:text="cofnij"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b2"
        android:layout_below="@+id/spinner2"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="50dp"
        android:text="dalej"/>
</RelativeLayout>